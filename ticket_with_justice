    <script>
        // ì°¸ì—¬ì ìˆ˜ì— ë”°ë¼ ì…ë ¥ í•„ë“œ ì—…ë°ì´íŠ¸
        function updateParticipantInputs() {
            const count = document.getElementById('participantCount').value;
            const container = document.getElementById('participantInputs');
            container.innerHTML = '';

            for (let i = 1; i <= count; i++) {
                const inputItem = document.createElement('div');
                inputItem.className = 'input-item';
                inputItem.innerHTML = `
                    <label for="person${i}">${i}ë²ˆ ì°¸ì—¬ì</label>
                    <input type="number" id="person${i}" value="${i <= 10 ? [3,4,3,4,2,2,3,1,2,1][i-1] : 1}" 
                           min="1" max="100" placeholder="ì›í•˜ëŠ” í‹°ì¼“ ìˆ˜">
                `;
                container.appendChild(inputItem);
            }
        }

        // ì´ˆê¸°í™”
        function resetInputs() {
            document.getElementById('totalTickets').value = 10;
            document.getElementById('participantCount').value = 10;
            updateParticipantInputs();
            document.getElementById('results').classList.remove('show');
        }

        // ìµœëŒ€ê³µì•½ìˆ˜ ê³„ì‚°
        function gcd(a, b) {
            while (b !== 0) {
                let temp = b;
                b = a % b;
                a = temp;
            }
            return a;
        }

        // ìµœì†Œê³µë°°ìˆ˜ ê³„ì‚°
        function lcm(a, b) {
            return Math.abs(a * b) / gcd(a, b);
        }

        // ë°°ì—´ì˜ ìµœì†Œê³µë°°ìˆ˜ ê³„ì‚°
        function lcmOfArray(arr) {
            let result = arr[0];
            for (let i = 1; i < arr.length; i++) {
                result = lcm(result, arr[i]);
            }
            return result;
        }

        // ì¶”ì²¨ ì‹œì‘
        function startLottery() {
            try {
                // ì…ë ¥ê°’ ìˆ˜ì§‘
                const totalTickets = parseInt(document.getElementById('totalTickets').value);
                const participantCount = parseInt(document.getElementById('participantCount').value);
                
                const wantedTickets = [];
                for (let i = 1; i <= participantCount; i++) {
                    const value = parseInt(document.getElementById(`person${i}`).value);
                    if (!value || value < 1) {
                        throw new Error(`${i}ë²ˆ ì°¸ì—¬ìì˜ í‹°ì¼“ ìˆ˜ë¥¼ ì˜¬ë°”ë¥´ê²Œ ì…ë ¥í•´ì£¼ì„¸ìš”.`);
                    }
                    wantedTickets.push(value);
                }

                // ìœ íš¨ì„± ê²€ì‚¬
                if (totalTickets < 1) {
                    throw new Error('ì´ í‹°ì¼“ ìˆ˜ëŠ” 1ì¥ ì´ìƒì´ì–´ì•¼ í•©ë‹ˆë‹¤.');
                }

                const totalWanted = wantedTickets.reduce((sum, tickets) => sum + tickets, 0);
                if (totalWanted < totalTickets) {
                    throw new Error(`ì°¸ì—¬ìë“¤ì´ ì›í•˜ëŠ” ì´ í‹°ì¼“ ìˆ˜(${totalWanted}ì¥)ê°€ ì‹¤ì œ í‹°ì¼“ ìˆ˜(${totalTickets}ì¥)ë³´ë‹¤ ì ìŠµë‹ˆë‹¤.`);
                }

                // ë¡œë”© í‘œì‹œ
                showLoading();

                // ì‹¤ì œ ì¶”ì²¨ ë¡œì§ ì‹¤í–‰ (ì•½ê°„ì˜ ì§€ì—°ìœ¼ë¡œ ë¡œë”© íš¨ê³¼)
                setTimeout(() => {
                    runLottery(totalTickets, participantCount, wantedTickets);
                }, 1000);

            } catch (error) {
                showError(error.message);
            }
        }

        // ë¡œë”© í‘œì‹œ
        function showLoading() {
            const resultsDiv = document.getElementById('results');
            resultsDiv.innerHTML = `
                <div class="loading">
                    <div class="loading-spinner"></div>
                    <p>ì¶”ì²¨ì„ ì§„í–‰ ì¤‘ì…ë‹ˆë‹¤...</p>
                </div>
            `;
            resultsDiv.classList.add('show');
        }

        // ì˜¤ë¥˜ í‘œì‹œ
        function showError(message) {
            const resultsDiv = document.getElementById('results');
            resultsDiv.innerHTML = `<div class="error">âŒ ${message}</div>`;
            resultsDiv.classList.add('show');
        }

        // ì‹¤ì œ ì¶”ì²¨ ë¡œì§
        function runLottery(totalTickets, participantCount, wantedTickets) {
            let resultsHTML = '';

            // 1. ê¸°ë³¸ ì •ë³´
            resultsHTML += `
                <h3>ğŸ¯ ì¶”ì²¨ ê²°ê³¼</h3>
                <div class="lottery-process">
                    <h4>ğŸ“Š ì°¸ì—¬ì ì •ë³´</h4>
            `;

            for (let i = 0; i < participantCount; i++) {
                resultsHTML += `<p>${i+1}ë²ˆ ì°¸ì—¬ì: ${wantedTickets[i]}ì¥ í¬ë§</p>`;
            }
            resultsHTML += `</div>`;

            // 2. ìµœì†Œê³µë°°ìˆ˜ ê³„ì‚°
            const lcmValue = lcmOfArray(wantedTickets);
            resultsHTML += `
                <div class="lottery-process">
                    <h4>ğŸ”¢ ìµœì†Œê³µë°°ìˆ˜: ${lcmValue}</h4>
                </div>
            `;

            // 3. ê³µ ê°œìˆ˜ ê³„ì‚°
            const ballCounts = [];
            let totalBalls = 0;

            resultsHTML += `<div class="lottery-process"><h4>ğŸ± ê° ì°¸ì—¬ìì˜ ê³µ ê°œìˆ˜</h4>`;
            for (let i = 0; i < participantCount; i++) {
                const personNumber = i + 1;
                const balls = Math.floor(lcmValue / wantedTickets[i]) * personNumber;
                ballCounts.push(balls);
                totalBalls += balls;
                resultsHTML += `<p>${personNumber}ë²ˆ: ${balls}ê°œ (í™•ë¥ : ${((balls/totalBalls)*100).toFixed(1)}%)</p>`;
            }
            resultsHTML += `</div>`;

            // 4. ì¶”ì²¨ìš© ê³µ ì£¼ë¨¸ë‹ˆ ë§Œë“¤ê¸°
            const ballsBag = [];
            for (let personNumber = 1; personNumber <= participantCount; personNumber++) {
                for (let j = 0; j < ballCounts[personNumber - 1]; j++) {
                    ballsBag.push(personNumber);
                }
            }

            // ê³µ ì„ê¸°
            for (let i = ballsBag.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [ballsBag[i], ballsBag[j]] = [ballsBag[j], ballsBag[i]];
            }

            // 5. ì¶”ì²¨ ì§„í–‰
            const winners = [];
            let remainingTickets = totalTickets;
            const excludedPeople = new Set();
            let roundNumber = 1;

            resultsHTML += `<div class="lottery-process"><h4>ğŸ² ì¶”ì²¨ ê³¼ì •</h4>`;

            while (remainingTickets > 0 && excludedPeople.size < participantCount) {
                // í˜„ì¬ ì‚¬ìš© ê°€ëŠ¥í•œ ê³µë“¤
                const currentBag = ballsBag.filter(ball => !excludedPeople.has(ball));
                
                if (currentBag.length === 0) break;

                // ëœë¤í•˜ê²Œ ê³µ ë½‘ê¸°
                const randomIndex = Math.floor(Math.random() * currentBag.length);
                const drawnBall = currentBag[randomIndex];
                const selectedPerson = drawnBall;
                const ticketsToGive = wantedTickets[selectedPerson - 1];

                resultsHTML += `<p><strong>${roundNumber}ë¼ìš´ë“œ:</strong> ${selectedPerson}ë²ˆ ë½‘íŒ! (${ticketsToGive}ì¥ ìš”ì²­)`;

                // í‹°ì¼“ ë¶€ì¡± í™•ì¸
                if (remainingTickets - ticketsToGive < 0) {
                    resultsHTML += ` âŒ í‹°ì¼“ ë¶€ì¡±ìœ¼ë¡œ ì¶”ì²¨ ì¢…ë£Œ</p>`;
                    break;
                }

                // ë‹¹ì²¨ ì²˜ë¦¬
                winners.push([selectedPerson, ticketsToGive]);
                remainingTickets -= ticketsToGive;
                excludedPeople.add(selectedPerson);

                resultsHTML += ` âœ… ë‹¹ì²¨! (ë‚¨ì€ í‹°ì¼“: ${remainingTickets}ì¥)</p>`;
                roundNumber++;
            }

            resultsHTML += `</div>`;

            // 6. ìµœì¢… ê²°ê³¼ë¥¼ ë¨¼ì € í‘œì‹œ
            if (winners.length > 0) {
                let finalResultsHTML = `<div class="lottery-process"><h4>ğŸ† ìµœì¢… ë‹¹ì²¨ì</h4>`;
                
                let totalDistributed = 0;
                winners.forEach(([personNumber, tickets], index) => {
                    finalResultsHTML += `
                        <div class="winner-card">
                            <div class="winner-info">${index + 1}. ${personNumber}ë²ˆ ì°¸ì—¬ì</div>
                            <div class="winner-tickets">${tickets}ì¥</div>
                        </div>
                    `;
                    totalDistributed += tickets;
                });

                // í†µê³„
                finalResultsHTML += `
                    <div class="stats">
                        <div class="stat-card">
                            <div class="stat-number">${winners.length}</div>
                            <div class="stat-label">ë‹¹ì²¨ì ìˆ˜</div>
                        </div>
                        <div class="stat-card">
                            <div class="stat-number">${totalDistributed}</div>
                            <div class="stat-label">ë°°ë¶„ëœ í‹°ì¼“</div>
                        </div>
                        <div class="stat-card">
                            <div class="stat-number">${totalTickets - totalDistributed}</div>
                            <div class="stat-label">ë‚¨ì€ í‹°ì¼“</div>
                        </div>
                    </div>
                `;

                // ë°°ì—´ í˜•íƒœ ê²°ê³¼
                const winnerNumbers = winners.map(([person, _]) => person);
                const winnerTickets = winners.map(([_, tickets]) => tickets);
                
                finalResultsHTML += `
                    <div style="background: white; padding: 20px; border-radius: 10px; margin-top: 20px;">
                        <h4>ğŸ”¢ ë°°ì—´ í˜•íƒœ ê²°ê³¼</h4>
                        <p><strong>ë‹¹ì²¨ì ë²ˆí˜¸:</strong> [${winnerNumbers.join(', ')}]</p>
                        <p><strong>ë°›ì€ í‹°ì¼“ ìˆ˜:</strong> [${winnerTickets.join(', ')}]</p>
                    </div>
                `;

                finalResultsHTML += `</div>`;
                
                // ìµœì¢… ê²°ê³¼ë¥¼ ê²°ê³¼ HTML ë§¨ ì•ì— ì¶”ê°€
                resultsHTML = `
                    <h3>ğŸ¯ ì¶”ì²¨ ê²°ê³¼</h3>
                    ${finalResultsHTML}
                    <div style="margin-top: 30px; padding-top: 20px; border-top: 2px dashed #dee2e6;">
                        <h4 style="color: #6c757d; text-align: center; margin-bottom: 20px;">ğŸ“‹ ìƒì„¸ ì¶”ì²¨ ê³¼ì •</h4>
                    </div>
                ` + resultsHTML.replace('<h3>ğŸ¯ ì¶”ì²¨ ê²°ê³¼</h3>', '');
            } else {
                resultsHTML += `<div class="error">ğŸ˜… ë‹¹ì²¨ìê°€ ì—†ìŠµë‹ˆë‹¤.</div>`;
            }

            // ê²°ê³¼ í‘œì‹œ
            document.getElementById('results').innerHTML = resultsHTML;
            document.getElementById('results').classList.add('show');
        }

        // í˜ì´ì§€ ë¡œë“œ ì‹œ ì´ˆê¸°í™”
        window.onload = function() {
            updateParticipantInputs();
        };
    </script>
